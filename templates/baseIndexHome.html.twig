<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Barbo Engenharia</title>

    <!-- Custom styles for this template-->
    <link href="{{ asset('css/business-frontpage.css') }}" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/sb-admin-2.css') }}" rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fundobarbo fixed-top m-0 p-0">
        <div class="container">
        <img src="img/logo_barbo.png" class="img-fluid teste navbar-brand">
        
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/indexservico">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://webmail.barboengenharia.com.br">Webmail</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#loginModal">Área Restrita</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header -->
    <header class="pt-1 my-2">
        <div class="container ">
            
        
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {% for servico in listaservicos %} 
            <div class="carousel-item {{ (loop.index == 1) ? 'active' : '' }}">
                <div class="card">
                    <img class="card-img" src="{{servico.foto}}" alt="">
                    <div class="card-img-overlay d-flex flex-column">
                        <div
                            class="row d-flex justify-content-between align-items-center text-white xbootstrap mx-1 px-2">
                            <h4 class="card-title">{{servico.projeto}}</h4>
                            <h6 class="card-title">Cliente: {{servico.cliente}}</h6>
                        </div>
                        <div class="mt-auto p-2 text-white xbootstrap">
                            <a class="card-text ">{{servico.descricao}}</a>
                            <div class="row d-flex justify-content-between align-items-center mx-1">
                                <a class="card-text">{{servico.local}}</a>
                                <a class="card-text">{{servico.data.format('M/Y')}}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>    
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </header>
    {% block body %}{% endblock %}
    <!-- Footer -->
    <footer class="py-2 fundobarbo">
        <div class="container">
            <p class="m-0 text-center">Copyright &copy; Barbo Engenharia 2019</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- login Modal-->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="col-sm-12 col-md-12">
                    <form action="{{ path('weblogin') }}" method="POST" class="mt-3">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <input id="usuario" name="_username" value="{{ last_username }}" placeholder="Usuário"
                                    class="form-control" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <input type="password" name="_password" class="form-control" required>
                            </div>
                        </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <button type="submit" id="submitlogin" class="btn btn-primary">Entrar</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/paginabarbo.js') }}"></script>
</body>

</html>