{% extends 'baseSistema.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}
{% block body %}
<div id="testeerro"></div>
<div id="dataChartDebito" data-datachart="{{ arrayDebito | json_encode | raw }}"></div>
<div id="dataChartCredito" data-datachart="{{ arrayCredito | json_encode | raw }}"></div>
<div id="dataChartResultado" data-datachart="{{ arrayResultado | json_encode | raw }}"></div>
<div id="dataChartpieCores" data-datachart="{{ chartpieCores | json_encode }}"></div>
<div id="dataChartpieValores" data-datachart="{{ chartpieValores | json_encode }}"></div>
<div id="dataChartpieLabels" data-datachart="{{ chartpieLabels | json_encode }}"></div>


<!-- Content Row -->
<div class="row"> 
    <!-- Card de Contas à Pagar -->
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-danger shadow">
            <!-- Inicio da Table -->
            <div class="card-header border-bottom">
                <h6 class="m-0 font-weight-bold">Contas à Pagar</h6>
            </div>
            <div class="card-body p-0 mt-3 mx-2">
            <h3>Agendamemtos:</h3>
            <table id="tablaagendamentoapagar" class="table table-striped table-bordered">
                    <thead class="bg-light TableCabecalho">
                        <tr>
                            <th scope="col" class="border-0">Data</th>
                            <th scope="col" class="border-0">Descrção</th> 
                            <th scope="col" class="border-0">Total</th>                           
                            <th scope="col" class="border-0"></th>
                            <th scope="col" class="border-0"></th>
                        </tr>
                    </thead>
                    <tbody class="TableLinha">
                     {% for lancamento in agendamentosdebito %}                      
                        <tr>
                            <td>{{ lancamento.data.format('d/m/Y') }}</td>
                            <td>{{ lancamento.descricao }}</td>                            
                            <td>{{ lancamento.total|number_format(2, ',', '.') }}</td>
                            <td><a href="/agendamentos?id={{lancamento.id}}&debito=1"><i class="fas fa-edit fa-sm"></i></a></td>
                            <td><a href="#" onclick="deletaagendamento({{lancamento.id}})"><i class="fas fa-trash-alt"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="/agendamentos?debito=1&id=0" class="btn btn-primary">Novo agendamento</a>
                <h3 class="mt-3">Lançamentos:</h3>
                <table id="tablecontasapagar" class="table table-striped table-bordered">
                    <thead class="bg-light TableCabecalho">
                        <tr>
                            <th scope="col" class="border-0">Data</th>
                            <th scope="col" class="border-0">Descrção</th>
                            <th scope="col" class="border-0">Conta</th>
                            <th scope="col" class="border-0"></th>
                            <th scope="col" class="border-0">Valor (R$)</th>
                            <th scope="col" class="border-0"></th>
                            <th scope="col" class="border-0"></th>
                        </tr>
                    </thead>
                    <tbody class="TableLinha">
                        {% for lancamento in lancamentodebito %}
                        <tr>
                            <td>{{ lancamento.data.format('d/m/Y')}}</td>
                            <td>{{ lancamento.descricao }}</td>
                            <td>{{ lancamento.idconta.nome }}</td>
                            <td>{% if lancamento.previsao == true %}
                                <i class="fas fa-exclamation-triangle"></i>
                                {% else %}
                                <i class="fas fas fa-check"></i>
                                {% endif %}
                            </td>
                            <td>{{ lancamento.valor|number_format(2, ',', '.') }}</td>
                            <td>
                                <a href="#" data-toggle="modal" data-target="#editLancamentoModal" onclick="setaModalEditlancamento(
                                                        '{{lancamento.id}}',
                                                        '{{lancamento.data.format('Y-m-d')}}',
                                                        '{{(lancamento.datapag != null) ? lancamento.datapag.format('Y-m-d') : "" }}',
                                                        '{{lancamento.idconta.id}}',
                                                        '{{lancamento.iccentrodecusto.id}}',
                                                        '{{lancamento.notafiscal}}',
                                                        '{{lancamento.descricao}}',
                                                        '{{lancamento.valor|number_format(2, ',', '.')}}',
                                                        '{{lancamento.debito}}',
                                                        '{{lancamento.previsao}}',
                                                        '{{(lancamento.valorpago != null) ? lancamento.valorpago|number_format(2, ',', '.') : "" }}',
                                                        true
                                                    )">
                                                <i class="fas fa-edit fa-sm"></i>
                                            </a>
                            </td>
                             <td>
                                            <a href="#" data-toggle="modal" data-target="#deleteLancamentoModal"
                                                onclick="setaModalDeletLancamento(
                                                        '{{lancamento.id}}',
                                                        '{{lancamento.data.format('d/m/Y')}}',
                                                        '{{(lancamento.datapag != null) ? lancamento.datapag.format('d/m/Y') : "" }}',
                                                        '{{lancamento.idconta.nome}}',
                                                        '{{lancamento.iccentrodecusto.nome}}',
                                                        '{{lancamento.notafiscal}}',
                                                        '{{lancamento.descricao}}',
                                                        '{{lancamento.valor|number_format(2, ',', '.')}}'
                                                        )">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="card-header border-bottom text-left TableLinha RodapeCard">
                    <div>
                        <p class="m-0 font-weight-bold"><i class="fas fa-exclamation-triangle"></i> Previsto = R$
                            {{saldodebitoprevisao|number_format(2, ',', '.')}}</p>
                        <p class="m-0 font-weight-bold"><i class="fas fa-check"></i> Consolidado = R$
                            {{saldodebitoconsolidado|number_format(2, ',', '.')}}</p>
                    </div>
                    <div class="text-right">
                        <h6 class="m-0 font-weight-bold text-danger">Total = R$
                            {{saldodebitotota|number_format(2, ',', '.')}}</h6>
                    </div>
                </div>

            </div>
            <!-- fim Table -->
        </div>
    </div>

    <!-- Card de Contas à Receber -->
