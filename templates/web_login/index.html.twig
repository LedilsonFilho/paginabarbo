{% extends 'baseIndexHome.html.twig' %}

{% block body %}

<!-- Page Content -->
  <div class="container min-vh-100">

    <div class="row mb-3">
      <div class="col-md-12 mb-12">
        <div class="card h-100">
          
          <div class="card-body">
            <h6 class="card-title fundobarbo text-white p-2">Faça o login</h6>
            <p class="card-text">
             <div class="row">
                <div class="col-md-4 mb-2">
                    <img src="{{ asset('img/security.jpg')}}" class="img-fluid rounded float-left" alt="...">
                </div>
                <div class="col-md-8 mb-10">
                    <div class="modal-header">
                        
                    </div>

                    <div class="col-sm-12 col-md-12">
                        <form action="{{ path('weblogin') }}" method="POST" class="mt-3">    
                            <div class="form-row">   
                                <div class="form-group col-md-12">
                                    <input id="usuario" name="_username" value="{{ last_username }}" placeholder="Usuário" class="form-control" required>
                                </div> 
                            </div> 
                            <div class="form-row">   
                                <div class="form-group col-md-12">
                                    <input type="password" name="_password" class="form-control" placeholder="Senha" required>
                                </div> 
                            </div>  
                             {% if error %}    
                            <div class="form-row">   
                                <div class="form-group col-md-12">
                                    <span>{{error.messageKey}} </span>
                                </div> 
                            </div> 
                             {% endif %} 
                    </div>
                    <div class="modal-footer">
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" id="submitlogin" class="btn btn-primary">Entrar</button>
                        
                    </div>
                    </form>                       
                </div>
            </div>
            </p>
          </div>          
        </div>
        
      </div>
      
    </div>
    <!-- /.row -->

    

  </div>
  <!-- /.container -->
{% endblock %}
